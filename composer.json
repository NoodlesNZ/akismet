{
  "name" : "noodlesnz/akismet",
  "description" : "The class in this package allows use of the Akismet anti-comment spam service.",
  "type": "library",
  "homepage" : "https://github.com/NoodlesNZ/akismet",
  "license" : "GPL-2.0-only",
  "authors" : [
    {
      "name": "Alex Potsides"
    },
    {
    "name" : "Nick Le Mouton",
    "email" : "nick@noodles.net.nz"
    }
  ],
  "support": {
    "issues": "https://github.com/NoodlesNZ/akismet/issues"
  },
  "require": {
    "php": ">=8.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.11"
  },
  "autoload": {
    "psr-4": {
      "NoodlesNZ\\Akismet\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "NoodlesNZ\\Akismet\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "analyse": "phpstan analyse"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": false
    }
  }
}
